<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/toolbar_icon_bg_padding"
        android:left="@dimen/toolbar_icon_bg_padding"
        android:right="@dimen/toolbar_icon_bg_padding"
        android:top="@dimen/toolbar_icon_bg_padding">
        <selector>
            <item
                android:state_enabled="true"
                android:state_pressed="false"
                android:state_selected="false">
                <bitmap
                    android:alpha="@integer/toolbar_icon_alpha_normal"
                    android:src="@drawable/ic_spen_shape"/>
            </item>
            <item
                android:state_enabled="true"
                android:state_pressed="true"
                android:state_selected="false">
                <bitmap
                    android:alpha="@integer/toolbar_icon_alpha_selected"
                    android:src="@drawable/ic_spen_shape"/>
            </item>
            <item
                android:state_enabled="true"
                android:state_pressed="false"
                android:state_selected="true">
                <bitmap
                    android:alpha="@integer/toolbar_icon_alpha_selected"
                    android:src="@drawable/ic_spen_shape"/>
            </item>
            <item
                android:state_enabled="true"
                android:state_pressed="true"
                android:state_selected="true">
                <bitmap
                    android:alpha="@integer/toolbar_icon_alpha_selected"
                    android:src="@drawable/ic_spen_shape"/>
            </item>
            <item
                android:state_enabled="false">
                <bitmap
                    android:alpha="@integer/toolbar_icon_alpha_disabled"
                    android:src="@drawable/ic_spen_shape"/>
            </item>
        </selector>
    </item>
</layer-list>
